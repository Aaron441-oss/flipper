#!/bin/sh
#/ Usage: examples
#/
#/ Run all the examples to ensure none are broken.
#/
#/ Examples:
#/
#/   examples
#/

set -e
cd $(dirname "$0")/..

[ "$1" = "--help" -o "$1" = "-h" -o "$1" = "help" ] && {
    grep '^#/' <"$0"| cut -c4-
    exit 0
}

FILES=$(find ./examples/* -type f -name '*.rb' -maxdepth 1 -not -name "example_setup.rb")
for f in $FILES
do
  echo "\n\nRunning $f ..."
  bundle exec ruby $f
done
